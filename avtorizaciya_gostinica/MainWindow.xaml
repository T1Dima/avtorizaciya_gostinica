<Window x:Class="avtorizaciya_gostinica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:avtorizaciya_gostinica"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Логин:" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox x:Name="LoginTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70,10,0,0" Width="200" />

        <Label Content="Пароль:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,40,0,0" />
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70,40,0,0" Width="200" />

        <Button Content="Войти" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70,80,0,0" Width="200" Click="LoginButton_Click" />

        <TextBlock x:Name="MessageTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,120,0,0" Foreground="Red" />
    </Grid>
</Window>
